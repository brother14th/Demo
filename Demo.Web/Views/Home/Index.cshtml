@model DemoViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-start">
    <h2 class="display-4">Top 5 Products</h2>
    <h3> @Html.DisplayFor(model => model.RetrieveTopProductsMessage)</h3>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TopProducts[0].GTIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopProducts[0].MerchantProductNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopProducts[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopProducts[0].Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TopProducts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GTIN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MerchantProductNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-start">
    <h2 class="display-4">Update Stock for Top Product</h2>
    <h3>@Html.DisplayFor(model => model.UpdateTopProductStockMessage)</h3>
</div>



